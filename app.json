{
    "id": "com.cyclone-software.sunevents",
    "name": {
        "en": "Sun Events",
        "nl": "Zonnestanden",
		"fr": "Événements solaires"
		
    },
    "description": {
        "en": "Triggers you at certain positions of the sun.",
        "nl": "Bij diverse zonnestanden kunt u triggers maken, u kunt ook uw eigen events defineren.",
		"fr": "Il vous déclenche à certaines positions du soleil."
    },
    "category": "tools",
    "images": {
        "large": "./assets/images/large.jpg",
        "small": "./assets/images/small.jpg"
    },
    "version": "0.1.8",
    "compatibility": ">=1.1.2",
    "author": {
        "name": "Marcel Timmermans",
        "email": "marcel@timmermans.us"
    },
    "permissions": [
        "homey:manager:geolocation"
    ],
    "flow": {
        "triggers": [{
            "id": "sun_event",
            "title": {
                "en": "Sun Events (offset in min)",
                "nl": "Zonnestanden events (offset in min)",
				"fr": "Événements solaires (décalage en min)"
            },
            "tokens": [{
                    "name": "event",
                    "title": {
                        "en": "Event",
                        "nl": "Event",
						"fr": Evenement"
                    }
                },
                {
                    "name": "se_time",
                    "title": {
                        "en": "Time",
                        "nl": "Tijd",
						"fr": "Heure"
                    }
                },
                {
                    "name": "se_date",
                    "title": {
                        "en": "Date",
                        "nl": "Datum",
						"fr": "Date"
                    }
                }
            ],
            "args": [{
                    "name": "event",
                    "type": "autocomplete",
                    "placeholder": {
                        "en": "Event",
                        "nl": "Event",
						"fr": "Evenement"
                    }
                },
                {
                    "name": "offset",
                    "type": "number",
                    "min": "-60",
                    "max": "60",
                    "step": "1",
                    "value": "0",
                    "placeholder": {
                        "en": "Offset in minutes",
                        "nl": "Offset in minuten"
                    }
                }
            ]
        }],
        "conditions": [{
            "id": "cond_sun_event",
            "title": {
                "en": "It !{{is|isn't}} after ",
                "nl": "Het !{{is|is niet}} na "
            },
            "args": [{
                    "name": "event",
                    "type": "autocomplete",
                    "placeholder": {
                        "en": "Event",
                        "nl": "Event",
						"fr": "Evenement"
                    }
                },
                {
                    "name": "offset",
                    "type": "number",
                    "min": "-60",
                    "max": "60",
                    "step": "1",
                    "value": "0",
                    "placeholder": {
                        "en": "Offset in minutes",
                        "nl": "Offset in minuten"
                    }
                }
            ]
        },{
            "id": "cond_sun_event_time",
            "title": {
                "en": "It !{{is|isn't}} after ",
                "nl": "Het !{{is|is niet}} na "
				"fr": "{{C'est|Ce n'est pas}}"
            },
            "args": [{
                    "name": "event",
                    "type": "autocomplete",
                    "placeholder": {
                        "en": "Event",
                        "nl": "Event"
                    }
                },
                {
                    "name": "time",
                    "type": "time"
                }
            ]
        }]

    }
}
